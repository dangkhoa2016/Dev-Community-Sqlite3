<div class="col-lg-10 mx-auto ml-5">
  <div class="row mt-4 mb-4">
    <% @users.each do |user| %>
      <div class="col-lg-3 mb-3 mt-3">
        <div class="card text-center shadow" style= "min-height: 480px">
          <div class="card-body">
            <%= image_tag "user_image.jpg", style: "max-width: 100%; border-radius: 50%; border: 2px solid #8d6efd;", class: 'mb-3' %>
            <div class="user-info">
              <h5><%= user.name %></h5>
              <p class="lead"><%= user.profile_title %></p>
              <small class="text-primary"><%= user.country %></small>
              <br>
              <%= link_to "View Profile", "javascript:void(0)", class: "btn btn-primary mt-3" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
