<div class="col-lg-10 mx-auto mt-5">
<%= render 'member_personal_details', user: @user %>

  <div class="card mb-5">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">About</h3>
        <% if @user == current_user %>
          <%= link_to edit_member_description_path, class: "edit-about", data: { controller: "bs-modal-form" } do %>
            <button type="button" class="btn btn-primary">Edit Description</button>
          <% end %>
        <% end %>
      </div>
      <%= render 'member_description', user: @user %>
    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <% if @user == current_user %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">Work Experience</h3>
        <div class="d-flex">
          <%= link_to new_work_experience_path, data: { controller: "bs-modal-form" } do %>
            <button type="button" class="btn btn-primary">Add Experience</button>
          <% end %>
          <% if @user.work_experiences.present? %>
            <%= link_to "javascript:void(0)", class:'ms-3' do %>
              <button type="button" class="btn btn-warning">Edit Experience</button>
            <% end %>
          <% end %>
        </div>
      </div>
      <% end %>

      <% if @user.work_experiences.present? %>
        <ul class= "list-group" id="work_experience_items">
          <% @user.work_experiences.each do |work_experience|%>
            <%= render 'work_experiences/work_experience', work_experience: work_experience %>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>
