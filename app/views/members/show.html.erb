<div class="col-lg-10 mx-auto mt-5">
<%= render 'member_personal_details', user: @user %>

  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <div class="d-flex justify-content-start">
            <h3>About</h3>
          </div>
        </div>
        <% if user_signed_in? && @user == current_user%>
            <div class="col-lg-6">
              <div class="d-flex justify-content-end">
                <%= link_to edit_member_description_path, data: { controller: "bs-modal-form" } do %>
                  <p>Edit Description</p>
                <% end %>
              </div>
            </div>
          <% end %>
      </div>
      <%= render 'member_description', user: @user %>
    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <% if user_signed_in? && @user == current_user %>
        <div class="row">
          <div class="col-lg-4">
            <div class="d-flex justify-content-start">
              <h3>Work Experience</h3>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="d-flex justify-content-start">
              <%= link_to new_work_experience_path, data: { controller: "bs-modal-form" } do %>
                Add Experience
              <% end %>
            </div>
          </div>
          <% if @user.work_experiences.present? %>
           <div class="col-lg-4">
            <div class="d-flex justify-content-start">
              <%= link_to "javascript:void(0)" do %>
                <i class="bi bi-pencil-fill"></i> Add Experiences
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
